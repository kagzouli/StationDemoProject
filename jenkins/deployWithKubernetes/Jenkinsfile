pipeline {
   agent { label 'stationslave' }
   
   tools { 
        maven 'Maven 3.3.9' 
        jdk 'jdk8' 
    }
   
    stages {
		
        stage ("startBack") {
            steps {
		sh "ls -lrt"
		sh "cat kubernates/back/backDeployTemplate.yaml"
		sh "sed 's/{{VERSION}}/${VERSION}/g'" 
		sh "sed 's+{{REPO_NEXUS_URL}}+${REPO_NEXUS_URL}+g'"
		sh "sed 's+{{MY_LOGS}}+${MY_LOGS}+g'"
		sh "kubectl apply -f kubernates/back/backDeployTemplate.yaml"
                sh "kubectl apply -f kubernates/back/backService.yaml" 
            }
        }

        stage ("stopFront") {
            steps {
		sh "cat kubernates/front/frontDeployTemplate.yaml"
		sh "sed 's+{{VERSION}}+${VERSION}+g'"
		sh "sed 's+{{REPO_NEXUS_URL}}+${REPO_NEXUS_URL}+g'"
		sh "sed 's+{{MY_LOGS}}+${MY_LOGS}+g'"
		sh "sed 's+{{DATABASE_DATA}}+${DATABASE_DATA}+g'"
                sh "kubectl apply -f kubernates/front/frontDeployTemplate.yaml" 
                sh "kubectl apply -f kubernates/front/frontService.yaml" 
            }
        }
     }

     post { 
	always { 
		cleanWs()
	}
     }
}
